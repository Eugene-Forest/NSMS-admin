<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.nsms.checkin.mapper.ShiftRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="shiftRecordResultMap" type="org.springblade.nsms.checkin.entity.ShiftRecord">
        <id column="id" property="id"/>
        <result column="create_user" property="createUser"/>
        <result column="create_dept" property="createDept"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="status" property="status"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="applicant_sid" property="applicantSid"/>
        <result column="be_requested_sid" property="beRequestedSid"/>
        <result column="change_result" property="changeResult"/>
        <result column="change_date" property="changeDate"/>
        <result column="change_shift" property="changeShift"/>
        <result column="application_status" property="applicationStatus"/>
        <result column="approval_opinion" property="approvalOpinion"/>
        <result column="approver" property="approver"/>
    </resultMap>


    <select id="selectShiftRecordPage" resultMap="shiftRecordResultMap">
        select * from com_shift_record where is_deleted = 0
    </select>

</mapper>
