<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.nsms.mapper.ExpectationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="expectationResultMap" type="org.springblade.nsms.entity.Expectation">
        <id column="id" property="id"/>
        <result column="create_user" property="createUser"/>
        <result column="create_dept" property="createDept"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="status" property="status"/>
        <result column="priority" property="priority"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="nurse_sid" property="nurseSid"/>
        <result column="expectation_type" property="expectationType"/>
        <result column="day_number" property="dayNumber"/>
        <result column="actual_state" property="actualState"/>
        <result column="reference_sid" property="referenceSid"/>
    </resultMap>


    <select id="selectExpectationPage" resultMap="expectationResultMap">
        select * from com_expectation where is_deleted = 0
    </select>


    <select id="getPriority" resultType="java.lang.Integer">
        select max(priority) from com_expectation
                 where is_deleted = 0 and create_user = #{userId} and reference_sid=#{referenceSid}
    </select>
</mapper>
